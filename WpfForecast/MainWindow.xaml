<Window x:Class="WpfForecast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForecast"
        mc:Ignorable="d"
      Title="Weather Forecast" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Location" FontSize="20" Margin="10" />
            <TextBlock x:Name="Temperature" FontSize="20" Margin="10" />
            <TextBlock x:Name="FeelsLike" FontSize="20" Margin="10" />
         
            <Image x:Name="WeatherImage" Width="100" Height="100" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
